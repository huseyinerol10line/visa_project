@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model ExploreCaliforniaa.Models.Interview
@{  
    Layout = "_Layout";
}

<h1>Create Blog Post</h1>

<fieldset>

    <form asp-action="Create" asp-controller="Blog">

        <div asp-validation-summary="ModelOnly" class="input-validation-error"></div>

        <p>
            <input type="checkbox" value="true" name="Gotten" /> True
            <input type="checkbox" value="false" name="Gotten" /> False
        </p>

        <p>
            <label asp-for="Story" >story</label>
            <textarea asp-for="Story" class="form-control" placeholder="Blog post content"></textarea>
            <span asp-validation-for="Story"></span>
        </p>
         
        <p>
            <label for="Date">Date</label>
            <input name="Date" id="Date" type="date" > 
             
</p>

        <div class="form-group">
            <div class="row">
                <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                    <label asp-for="visa_Name" class="control-label"></label>
                    <select asp-for="visa_ID"
                            class="form-control"
                            asp-items="@(new SelectList(@ViewBag.ListofCountry,"id", "name"))"></select>
                </div>
            </div>
        </div>

        <p>
            <button type="submit">Create Post</button>
        </p>

       

    </form>

</fieldset>